<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
    <Name>Solder</Name>
    <Overview>Technic Solder is an API that sits between a modpack repository and the launcher. It allows you to easily manage multiple modpacks in one single location. It's the same API we use to distribute our modpacks!</Overview>
    <Registry>https://registry.hub.docker.com/u/jholsclaw79/solder/</Registry>
    <Repository>jholsclaw79/solder</Repository>
    <Privileged>false</Privileged>
    <Network>bridge</Network>
    <WebUI>http://[IP]:[PORT:880]</WebUI>
    <Config
        Type="Port"
        Name="Web UI - HTTP"
        Target="80"
        Default="880"
        Mode="tcp"
        Description="Web UI Port"
        Display="always"
        Required="true">880</Config>
    <Config
        Type="Port"
        Name="Web UI - HTTP"
        Target="443"
        Default="8443"
        Mode="tcp"
        Description="Web UI Port"
        Display="always"
        Required="true">8443</Config>
    <Config
        Type="Path"
        Name="Configuration Folder"
        Target="/etc/nginx"
        Default="/mnt/user/appdata/Solder/nginx-config"
        Mode="rw"
        Description="Nginx Configuration Folder"
        Display="always"
        Required="true"></Config>
    <Config
        Type="Path"
        Name="Web Folder"
        Target="/var/www/html"
        Default="/mnt/user/appdata/Solder/www"
        Mode="rw"
        Description="Location for Nginx WWW Folder"
        Display="always"
        Required="true"></Config>
    <Config
        Type="Variable"
        Name="App URL"
        Key="APP_URL"
        Display="always"></Config>
    <Config
        Type="Variable"
        Name="DB Connection Type"
        Key="DB_CONNECTION"
        Display="always"></Config>
    <Config
        Type="Variable"
        Name="DB Host"
        Key="DB_HOST"
        Display="always"></Config>
    <Config
        Type="Variable"
        Name="DB Port"
        Key="DB_PORT"
        Display="always"></Config>
    <Config
        Type="Variable"
        Name="DB Database Name"
        Key="DB_DATABASE"
        Display="always"></Config>
    <Config
        Type="Variable"
        Name="DB Username"
        Key="DB_USERNAME"
        Display="always"></Config>
    <Config
        Type="Variable"
        Name="DB Password"
        Key="DB_PASSWORD"
        Display="always"></Config>
    <Config
        Type="Variable"
        Name="Cache Driver"
        Key="CACHE_DRIVER"
        Display="always"></Config>
    <Config
        Type="Variable"
        Name="Redis Host"
        Key="REDIS_HOST"
        Display="always"></Config>
    <Config
        Type="Variable"
        Name="Redis Password"
        Key="REDIS_PASSWORD"
        Display="always"></Config>
    <Config
        Type="Variable"
        Name="Redis Port"
        Key="REDIS_PORT"
        Display="always"></Config>
    <Config
        Type="Variable"
        Name="Solder Repo Location"
        Key="SOLDER_REPO_LOCATION"
        Display="always"></Config>
    <Config
        Type="Variable"
        Name="Solder Mirror Url"
        Key="SOLDER_MIRROR_URL"
        Display="always"></Config>
</Container>